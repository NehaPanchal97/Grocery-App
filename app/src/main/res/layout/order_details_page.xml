<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/orderTopBar"
                android:layout_width="match_parent"
                android:layout_height="80dp">


                <ImageView
                    android:id="@+id/order_back_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/ptsans_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/order_details_page_header"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/order_container_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/orderTopBar"
                android:background="@drawable/home_fragment_layout_rounded_corners"
                android:elevation="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/tracking_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="@null"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="18dp">


                        <TextView
                            android:id="@+id/timePlaced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="2dp"
                            android:text="@string/order_time"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/checkPlaced"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/circle_check"
                            android:contentDescription="@string/todo"
                            android:padding="10dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintLeft_toRightOf="@id/timePlaced"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/boldTextPlaced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="@string/order_placed_text"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintLeft_toRightOf="@id/checkPlaced"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/normalTextPlaced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/ptsans_regular"
                            android:maxWidth="200dp"
                            android:maxLines="4"
                            android:paddingBottom="10dp"
                            android:text="@string/pending_order_description"
                            android:textColor="#EE424345"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/checkPlaced"
                            app:layout_constraintStart_toStartOf="@id/boldTextPlaced"
                            app:layout_constraintTop_toBottomOf="@id/boldTextPlaced" />

                        <TextView
                            android:id="@+id/timePending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="2dp"
                            android:text="@string/order_time"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPlaced" />

                        <ImageView
                            android:id="@+id/checkPending"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/circle_check"
                            android:contentDescription="@string/todo"
                            android:padding="10dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintLeft_toRightOf="@id/timePending"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPlaced"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/boldTextPending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="@string/pending_text"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintLeft_toRightOf="@id/checkPending"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPlaced" />

                        <TextView
                            android:id="@+id/normalTextPending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/ptsans_regular"
                            android:maxWidth="200dp"
                            android:maxLines="4"
                            android:paddingBottom="10dp"
                            android:text="@string/pending_order_description"
                            android:textColor="#EE424345"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/checkPending"
                            app:layout_constraintStart_toStartOf="@id/boldTextPending"
                            app:layout_constraintTop_toBottomOf="@id/boldTextPending" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="#DDDEE6"
                            app:layout_constraintBottom_toTopOf="@id/checkPending"
                            app:layout_constraintEnd_toEndOf="@id/checkPlaced"
                            app:layout_constraintStart_toStartOf="@id/checkPlaced"
                            app:layout_constraintTop_toBottomOf="@id/checkPlaced" />

                        <TextView
                            android:id="@+id/timeConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="2dp"
                            android:text="@string/order_time"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPending" />

                        <ImageView
                            android:id="@+id/checkConfirmed"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/circle_check"
                            android:contentDescription="@string/todo"
                            android:padding="10dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintLeft_toRightOf="@id/timeConfirmed"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPending"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/boldTextConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="@string/confirmed_text"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintLeft_toRightOf="@id/checkConfirmed"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextPending" />

                        <TextView
                            android:id="@+id/normalTextConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/ptsans_regular"
                            android:maxWidth="200dp"
                            android:maxLines="4"
                            android:paddingBottom="10dp"
                            android:text="@string/confirmed_order_description"
                            android:textColor="#EE424345"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/checkConfirmed"
                            app:layout_constraintStart_toStartOf="@id/boldTextConfirmed"
                            app:layout_constraintTop_toBottomOf="@id/boldTextConfirmed" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="#DDDEE6"
                            app:layout_constraintBottom_toTopOf="@id/checkConfirmed"
                            app:layout_constraintEnd_toEndOf="@id/checkPending"
                            app:layout_constraintStart_toStartOf="@id/checkPending"
                            app:layout_constraintTop_toBottomOf="@id/checkPending" />

                        <TextView
                            android:id="@+id/timeProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="2dp"
                            android:text="@string/order_time"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextConfirmed" />

                        <ImageView
                            android:id="@+id/checkProcessing"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/circle_check"
                            android:contentDescription="@string/todo"
                            android:padding="10dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintLeft_toRightOf="@id/timeProcessing"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextConfirmed"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/boldTextProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="@string/processing_text"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintLeft_toRightOf="@id/checkProcessing"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextConfirmed" />

                        <TextView
                            android:id="@+id/normalTextProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/ptsans_regular"
                            android:maxWidth="200dp"
                            android:maxLines="4"
                            android:paddingBottom="10dp"
                            android:text="@string/processing_order_description"
                            android:textColor="#EE424345"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/checkProcessing"
                            app:layout_constraintStart_toStartOf="@id/boldTextProcessing"
                            app:layout_constraintTop_toBottomOf="@id/boldTextProcessing" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="#DDDEE6"
                            app:layout_constraintBottom_toTopOf="@id/checkProcessing"
                            app:layout_constraintEnd_toEndOf="@id/checkConfirmed"
                            app:layout_constraintStart_toStartOf="@id/checkConfirmed"
                            app:layout_constraintTop_toBottomOf="@id/checkConfirmed" />

                        <TextView
                            android:id="@+id/timeDelivered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="2dp"
                            android:text="@string/order_time"
                            android:textColor="@android:color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextProcessing" />

                        <ImageView
                            android:id="@+id/checkDelivered"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/circle_check"
                            android:contentDescription="@string/todo"
                            android:padding="10dp"
                            app:layout_constraintHorizontal_bias="0.05"
                            app:layout_constraintLeft_toRightOf="@id/timeDelivered"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextProcessing"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/boldTextDelivered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="@string/delivered_text"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintLeft_toRightOf="@id/checkDelivered"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/normalTextProcessing" />

                        <TextView
                            android:id="@+id/normalTextDelivered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/ptsans_regular"
                            android:maxWidth="200dp"
                            android:maxLines="4"
                            android:paddingBottom="10dp"
                            android:text="@string/delivered_order_description"
                            android:textColor="#EE424345"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/checkDelivered"
                            app:layout_constraintStart_toStartOf="@id/boldTextDelivered"
                            app:layout_constraintTop_toBottomOf="@id/boldTextDelivered" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="#DDDEE6"
                            app:layout_constraintBottom_toTopOf="@id/checkDelivered"
                            app:layout_constraintEnd_toEndOf="@id/checkProcessing"
                            app:layout_constraintStart_toStartOf="@id/checkProcessing"
                            app:layout_constraintTop_toBottomOf="@id/checkProcessing" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="@null"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tracking_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/ptsans_bold"
                            android:text="Description"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_order_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>
    </ScrollView>
</layout>