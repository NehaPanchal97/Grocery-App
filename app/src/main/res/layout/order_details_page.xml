<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#27ae60"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/orderTopBar"
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <ImageView
                android:id="@+id/order_back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_back"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Order Details"
                android:textSize="25sp"
                android:fontFamily="@font/ptsans_bold"
                android:gravity="center_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_container_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:orientation="vertical"
            android:layout_below="@id/orderTopBar"
            android:background="@drawable/homefragment_layout_rounded_corners"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tracking_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:contentPadding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="@null"
                app:cardCornerRadius="20dp"
                tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/checkPlaced"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/circle_check"
                    app:layout_constraintLeft_toRightOf="@id/timePlaced"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"/>


                <TextView
                    android:id="@+id/timePlaced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 9:30 AM"
                    android:padding="2dp"
                    android:textColor="@android:color/black"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>



                <TextView
                    android:id="@+id/boldTextPlaced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Order Placed"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ptsans_bold"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@id/checkPlaced"
                   app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/normalTextPlaced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Your Order#241562 is placed for delivery"
                    android:textColor="#EE424345"
                    android:maxLines="2"
                    android:maxWidth="200dp"
                    android:fontFamily="@font/ptsans_regular"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/boldTextPlaced"
                   app:layout_constraintLeft_toRightOf="@id/checkPlaced"
                   app:layout_constraintTop_toBottomOf="@id/boldTextPlaced"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/tracking_container">

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>