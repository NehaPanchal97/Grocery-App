<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/cartItemImage"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/strawberry"
        android:contentDescription="@string/todo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartItemTitle"
        android:gravity="start"
        android:padding="5dp"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintLeft_toRightOf="@id/cartItemImage"
        android:maxWidth="160dp"
        android:text= "@string/vegetables"
        android:textColor="#191818"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_item_price"
        android:gravity="start"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@id/cartItemImage"
        app:layout_constraintStart_toStartOf="@id/cartItemTitle"
        app:layout_constraintEnd_toEndOf="@id/cartItemTitle"
        app:layout_constraintTop_toBottomOf="@id/cartItemTitle"
        android:maxWidth="200dp"
        android:text="@string/price_of_item"
        android:textColor="#27ae60"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/cartItemTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/iv_cart_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:contentDescription="@string/todo"
            android:onClick="remove"
            android:padding="3dp"
            android:tint="#000000"
            app:srcCompat="@drawable/remove" />

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#27ae60"
            android:padding="3dp"
            android:text="@string/count"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/iv_cart_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:contentDescription="@string/todo"
            android:onClick="add"
            android:padding="3dp"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>