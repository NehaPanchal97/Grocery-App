<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#27ae60"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cartTopBar"
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cart_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Cart "
                android:textSize="25sp"
                android:fontFamily="@font/ptsans_bold"
                android:gravity="center_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/cart_container_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:orientation="vertical"
            android:layout_below="@id/cartTopBar"
            android:background="@drawable/homefragment_layout_rounded_corners"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:contentPadding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="@null"
                app:cardCornerRadius="20dp">

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/cart_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cart_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/checkout_container"
                android:layout_width="match_parent"
                android:background="@drawable/cart_checkout_container_background"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cart_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Total:$28.60"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/ptsans_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/checkout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/cart_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="10dp"
                    android:text="Checkout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cornerRadius="10dp"

                    android:layout_margin="15dp"
                    android:textAllCaps="false"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>