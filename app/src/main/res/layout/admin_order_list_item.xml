<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="address"
            type="String" />
        <variable
            name="placeholder"
            type="Integer" />
        <variable
            name="url"
            type="String" />
        <variable
            name="itemCount"
            type="String" />
        <variable
            name="status"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white_color"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/placed_date_tv"
                android:text="@{name}"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                tools:text="@tools:sample/date/ddmmyy"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"/>

            <ImageView
                loadUrl="@{url}"
                placeholder="@{placeholder}"
                circular="@{false}"
                android:id="@+id/product_iv"
                tools:src="@tools:sample/avatars"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placed_date_tv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/product_description" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/product_iv"
                android:id="@+id/name_tv"
                android:text="@{name}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/product_iv"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="sans-serif"
                android:textSize="19sp"
                tools:text="@tools:sample/full_names"
                android:textColor="@color/black_color"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/product_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/name_tv"
                android:id="@+id/address_tv"
                android:textSize="15sp"
                android:text="@{address}"
                tools:text="@tools:sample/cities"/>
            <TextView
                android:id="@+id/item_count_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/product_iv"
                tools:text="4 Items"
                android:text="@{itemCount}"
                android:layout_marginStart="12dp"
                android:textSize="17sp"
                android:textColor="#3342fe"
                app:layout_constraintTop_toTopOf="@id/status_tv"
                app:layout_constraintBottom_toBottomOf="@id/status_tv"/>
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:text="@{status}"
                app:layout_constraintTop_toBottomOf="@id/address_tv"
                tools:text="Ordered"
                android:background="@drawable/order_status_bg"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
