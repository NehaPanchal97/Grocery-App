<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/itemImage"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vegetables"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/specificItemTitle"
            android:layout_below="@id/itemImage"
            android:gravity="start"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/itemImage"
            android:maxWidth="200dp"
            android:text="@string/vegetables"
            android:textColor="#191818"
            android:textSize="18sp"/>
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/tv_amount"-->
<!--            android:gravity="start"-->
<!--            android:padding="5dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tvTitle"-->
<!--            android:maxWidth="200dp"-->
<!--            android:text="@string/amount_with_quantity"-->
<!--            android:textColor="#BFBCBC"-->
<!--            android:textSize="18sp"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:gravity="start"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specificItemTitle"
            android:maxWidth="200dp"
            android:text="@string/price_of_item"
            android:textColor="#27ae60"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:background="@drawable/add_subtract_button_for_items"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@id/itemImage"
            app:layout_constraintLeft_toRightOf="@id/tv_price"
            app:layout_constraintRight_toRightOf="parent">

            <ImageButton
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#27ae60"
                android:padding="3dp"
                android:onClick="remove"
                app:srcCompat="@drawable/remove"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count"
                android:padding="3dp"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/iv_add"
                android:padding="3dp"
                android:onClick="add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#27ae60"
                app:srcCompat="@drawable/ic_add"
                android:contentDescription="@string/todo" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>