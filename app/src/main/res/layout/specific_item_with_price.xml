<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/itemImage"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vegetables"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:layout_below="@id/itemImage"
            android:gravity="center"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/itemImage"
            android:maxWidth="200dp"
            android:text="vegetables"
            android:textColor="#191818"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_amount"
            android:gravity="start"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:maxWidth="200dp"
            android:text="$17.00/kg"
            android:textColor="#BFBCBC"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:gravity="start"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_amount"
            android:maxWidth="200dp"
            android:text="$17.20"
            android:textColor="#27ae60"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/add_subtract_button_for_items"
            android:drawableTop="@drawable/remove"
            android:drawableBottom="@drawable/ic_add"
            android:gravity="center"
            android:padding="3dp"
            android:text="01"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/tv_amount"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>