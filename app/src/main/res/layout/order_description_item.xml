<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemCount"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/orderDesItemImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/todo"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:padding="8dp"
                tools:ignore="MissingConstraints"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderDesItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxWidth="160dp"
                    android:maxLines="2"
                    android:padding="5dp"

                    android:text="@string/vegetables"
                    android:textColor="#191818"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/order_des_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxWidth="200dp"
                    android:padding="5dp"
                    android:text="@string/rs_symbol"
                    android:textColor="#27ae60"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/cartItemTitle"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/cartItemTitle"
                    app:layout_constraintTop_toBottomOf="@id/cartItemTitle" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>