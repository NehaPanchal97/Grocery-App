<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27ae60"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/topBar"
       android:layout_width="match_parent"
       android:layout_height="150dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:textColor="#C1E8D2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:lineSpacingExtra="4dp"
            android:text="Hey ,\nLet's search your grocery food "
            tools:ignore="MissingConstraints" />

       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:src="@drawable/ic_circle_account"
           android:layout_margin="25dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toRightOf="@+id/tvText"/>
       <TextView
           android:id="@+id/search_container"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_margin="25dp"
           android:textColor="#EDEFF2"
           android:paddingLeft="10dp"
           android:drawableStart="@drawable/ic_search"
           android:background="@drawable/text_search_container"
           app:layout_constraintTop_toBottomOf="@id/tvText"/>

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/editTextSearch"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_margin="25dp"
           android:background="@null"
           android:padding="5dp"
           android:paddingStart="40dp"
           android:hint="Search your daily grocery food..."
           app:layout_constraintStart_toEndOf="@id/search_container"/>


   </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/container_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:elevation="0dp"
        android:orientation="vertical"
        android:layout_below="@id/topBar"
        android:background="@drawable/homefragment_layout_rounded_corners"
        android:padding="10dp">
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/home_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/catRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </LinearLayout>

</RelativeLayout>
</layout>