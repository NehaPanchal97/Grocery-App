<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27ae60"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/topBar"
       android:layout_width="match_parent"
       android:layout_height="150dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:lineSpacingExtra="4dp"
            android:text="hey ,\n Let's search your grocery food "
            tools:ignore="MissingConstraints" />

       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:src="@drawable/ic_baseline_account_circle_24"
           android:layout_margin="25dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toRightOf="@+id/tvText"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:drawableLeft="@drawable/ic_baseline_search_24"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_margin="25dp"
           android:padding="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="4dp"
           android:hint="Search your daily grocery food....."
           android:gravity="center_vertical"
           android:textColor="#EDEFF2"
           android:background="@drawable/text_search_container"
           app:layout_constraintTop_toBottomOf="@id/tvText"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/container_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:elevation="0dp"
        android:orientation="vertical"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:background="@drawable/main_rounded_corners_layout"
        android:padding="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </LinearLayout>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_navigation_bar"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"/>



</RelativeLayout>
