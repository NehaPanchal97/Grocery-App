<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTextFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="AppDropDownStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

    </style>
    <style name="AppChipStyle" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:checkable">false</item>
        <item name="closeIconTint">#ffffff</item>
        <item name="closeIconSize">22dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="android:text">Kasi Kasi</item>
    </style>
    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

    <style name="circularStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="placed_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:text">Order Placed</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="confirmed_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:text">Confirmed</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="processing_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:text">Processing</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="delivered_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:text">Delivered</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="error_color_text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:text">Declined</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>