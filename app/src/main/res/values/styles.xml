<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTextFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="AppDropDownStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

    </style>

    <style name="AppChipStyle" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:checkable">false</item>
        <item name="closeIconTint">#ffffff</item>
        <item name="closeIconSize">22dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="android:text">Kasi Kasi</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

    <style name="AdminToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="ProductPriceStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ProductDiscountedPriceStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/success_color</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="DiscountPriceStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/success_color</item>
        <item name="fontFamily">@font/ptsans_bold</item>
    </style>


</resources>